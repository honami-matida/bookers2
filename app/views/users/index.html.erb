<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <!-- 編集リンクが未実装 -->
      <%= render 'books/new', book: @book, user: @user %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th><%= image_tag 'default-image.jpg', :size => '80x80' %></th>
            <th><%= user.name %></th>
            <th>
              <%= link_to "Show", user_path(user.id) %>
            </th>
          </tr>
           <% end %>
      </table>
    </div>
  </div>
</div>